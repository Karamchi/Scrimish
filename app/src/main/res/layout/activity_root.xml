<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/posiblefondo"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:paddingStart="5dp"
        android:src="@drawable/text"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_marginTop="-25dp"
        android:layout_marginBottom="15dp"
        android:padding="15dp"
        android:src="@drawable/otro_logo_cut_2"/>

    <Button
        android:id="@+id/root_create"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:padding="10dp"
        android:minHeight="0dp"
        android:text="start a private game"
        android:textColor="#dddddd"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/root_match"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:textColor="#dddddd"
        android:padding="10dp"
        android:minHeight="0dp"
        android:background="@drawable/button"
        android:text="find me a match"/>

    <Button
        android:id="@+id/play_vs_ai"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:textColor="#dddddd"
        android:padding="10dp"
        android:minHeight="0dp"
        android:background="@drawable/button"
        android:text="Play vs AI"/>

    <Button
        android:id="@+id/root_howto"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#dddddd"
        android:background="@drawable/button"
        android:padding="10dp"
        android:minHeight="0dp"
        android:text="How to play">

    </Button>

</LinearLayout>