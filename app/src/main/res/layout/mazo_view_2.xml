<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:padding="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp">

        <!--<androidx.cardview.widget.CardView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--app:layout_constraintTop_toTopOf="parent"-->
            <!--app:layout_constraintDimensionRatio="W,8.8:6.4"-->
            <!--app:cardCornerRadius="10dp"-->
            <!--app:cardBackgroundColor="#cccccc">-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="W,8.8:6.4"
            android:background="@drawable/card_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:src="@drawable/otro_logo"/>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.example.scrimish.view.CardView
        android:id="@+id/mazo_view_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:clipChildren="false"
        android:visibility="visible"/>

    <com.example.scrimish.view.CardView
        android:id="@+id/mazo_view_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:clipChildren="false"
        android:visibility="visible"/>

    <com.example.scrimish.view.CardView
        android:id="@+id/mazo_view_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:clipChildren="false"
        android:visibility="visible"/>

    <com.example.scrimish.view.CardView
        android:id="@+id/mazo_view_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:clipChildren="false"
        android:visibility="visible"
        />

    <com.example.scrimish.view.CardView
        android:id="@+id/mazo_view_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:layout_marginTop="40dp"
        android:visibility="visible"/>

</FrameLayout>